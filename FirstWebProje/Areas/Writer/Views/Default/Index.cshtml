@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
    string mesage = "";
}
<h1>Index</h1>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>User</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>DURUM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == false)
                            {
                                color = "badge badge-danger";
                                mesage = "Okundu";
                            }
                            else
                            {
                                color = "badge badge-success";
                                mesage = "Yeni Duyuru";
                            }
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.User</td>
                                <td>@item.Title</td> 
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <span class="@color">@mesage</span>
                                </td>
                                <td><a href="/Writer/Default/AnnouncementDetail/@item.Id" class=" btn btn-primary">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
