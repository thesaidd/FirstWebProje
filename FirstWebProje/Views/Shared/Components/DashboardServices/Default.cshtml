@using EntityLayer.Concrete
@model List<Service>

<div class="row">
    <div class="col-12">
        <h3 class="mb-3">Hizmetler</h3>

        <div class="services-container">
            <div class="services-wrapper">

                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="service-item">
                            <div class="card text-center h-100 py-4">
                                <img src="@item.ImageUrl" class="service-image" alt="@item.Title" />
                                <h6 class="text-primary text-uppercase">@item.Title</h6>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Gösterilecek hizmet bulunamadı.</p>
                }

            </div>
        </div>
    </div>
</div>