@using EntityLayer.Concrete
@model List<UserMessage>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="h3 mb-0">Gelen Mesajlar</h5>

        @{
            // Okunmamış mesaj sayısını hesapla
            var unreadCount = Model.Count(x => x.Status);
            if (unreadCount > 0)
            {
                <span class="badge badge-pill badge-danger">@unreadCount Yeni</span>
            }
        }
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">

            @if (Model.Count == 0)
            {
                <div class="list-group-item">
                    <p class="text-muted text-center mb-0">Gösterilecek mesaj bulunmuyor.</p>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    // Status==false (okunmadı) ise class'ı dinamik olarak ayarla.
                    var itemClass = !item.Status ? "list-group-item-light font-weight-bold" : "";

                    // Varsayılan profil fotoğrafı yolu. Bu yolu kendi projenize göre güncelleyin.
                    var profileImageUrl = !string.IsNullOrEmpty(item.User.ImageUrl) ? item.User.ImageUrl : "/images/default-avatar.png";

                    <a href="javascript:void(0);" class="list-group-item list-group-item-action @itemClass">
                        @* --- YENİ: Ana taşıyıcı olarak d-flex kullanıyoruz --- *@
                        <div class="d-flex align-items-start w-100">

                            @* --- YENİ: Kullanıcı Profil Fotoğrafı --- *@
                            <img src="@item.User.ImageUrl" class="rounded-circle me-3" alt=@item.User.Name profil fotoğrafı" style="width: 30px; height: 30px; object-fit: cover;">

                            @* Metin içeriğini taşıyan ve kalan tüm alanı kaplayan div *@
                            <div class="flex-grow-1" style="min-width: 0;">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@item.User.Name</h5>
                                    <small class="text-muted">@item.Date.ToString("dd MMM yy")</small>
                                </div>

                                <p class="mb-1"><strong>@item.Title</strong></p>

                                <p class="mb-1 text-muted small text-truncate">
                                    @item.Content
                                </p>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>
    </div>
</div>