@using EntityLayer.Concrete
@model List<Portfolio>

<div class="card">
    <div class="card-header border-0">
        <h3 class="mb-0">Projelerim</h3>
    </div>
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Proje Adı</th>
                    <th scope="col">Link</th>
                </tr>
            </thead>

            @* 1. TBODY: Her zaman görünecek olan ilk 4 proje *@
            <tbody>
                @foreach (var item in Model.Take(4))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td><a href="@item.ProjectUrl" target="_blank" class="btn btn-sm btn-primary">İncele</a></td>
                    </tr>
                }
            </tbody>

            @* Eğer 4'ten fazla proje varsa, gizli tbody ve butonu oluştur *@
            @if (Model.Count > 4)
            {
                @* 2. TBODY: Tıklandığında açılacak olan gizli projeler *@
                <tbody class="collapse" id="collapseProjects">
                    @foreach (var item in Model.Skip(4))
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><a href="@item.ProjectUrl" target="_blank" class="btn btn-sm btn-primary">İncele</a></td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>

    @* Genişletme/Daraltma butonu tablo dışına, kartın altına (card-footer) eklenir *@
    @if (Model.Count > 4)
    {
        <div class="card-footer text-center py-2">
            <a class="font-weight-bold small" data-toggle="collapse" href="#collapseProjects" role="button" aria-expanded="false" aria-controls="collapseProjects">
                Daha Fazla Göster
            </a>
        </div>
    }
</div>