@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h1>
        Projeler
    </h1>
</div>

<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div>
        <a href="/Portfolio/AddPortfolio/" class="btn btn-primary">Yeni Proje ekle</a>
        <a href="/Portfolio/DeletedPortfolio/" class="btn btn-warning">Çöp Kutusu (Silinmiş Yetenekler)</a>

    </div>
    <div class="container">
        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <a href="https://dribbble.com">
                        <figure class="portfolio-item">
                            <img src="@item.ImageuUrl" data-bp="@item.ImageuUrl2" />
                            <figcaption>
                                <h4 class="h5 mb-0">@item.Name</h4>
                                <div>@item.ProjectUrl</div>
                            </figcaption>
                        </figure>
                    </a>
                    <div>
                        <form asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-id="@item.PortfolioID" method="post">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Bu projeyi silmek istediğinizden emin misiniz? Kayıt çöp kutusuna taşınacaktır.');">
                                Sil
                            </button>
                        </form>
                        <a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-success">Güncelle</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
