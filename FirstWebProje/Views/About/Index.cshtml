@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hakkımda Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    @Html.HiddenFor(x => x.AboutID)
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "from-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "from-control" })
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(x => x.Age, new { @class = "from-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "from-control" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Address, new { @class = "from-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "from-control" })
    <br />
    <label>fotoğraf</label>
    @Html.TextBoxFor(x => x.ImagwUrl, new { @class = "from-control" })
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
    
}