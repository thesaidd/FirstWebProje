@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yeni Hizmetler Ekleme Sayfası</h3>
</div>

<form asp-action="AddService" method="post" class="p-3">

    <div class="form-group">
        <label asp-for="Title">Deneyim Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Görsel URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Service/Index/" class="btn btn-secondary">İptal et ve Geri Dön</a>

</form>

