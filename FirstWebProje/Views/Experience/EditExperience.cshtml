@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Düzenleme Sayfası</h3>
</div>

<form asp-action="EditExperience" method="post" class="p-3">

    @* ID'nin form ile birlikte sunucuya geri gönderilmesi ÇOK ÖNEMLİDİR. *@
    <input type="hidden" asp-for="Id" />
    @* Soft delete için IsDeleted bayrağını da gönderelim ki kaybolmasın *@
    <input type="hidden" asp-for="IsDeleted" />

    <div class="form-group">
        <label asp-for="Name">Deneyim Başlığı</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Tarih Aralığı</label>
        <input type="text" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Görsel URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Experience/Index/" class="btn btn-secondary">İptal et ve Geri Dön</a>

</form>