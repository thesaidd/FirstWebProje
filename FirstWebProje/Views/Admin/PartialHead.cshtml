            /* YENİ EKLENEN KISIM: SVG'nin kendisi için */
            .service-image svg {
                width: 100%; /* Kendisini çevreleyen .service-image div'ini doldurur */
                height: 100%;
            }

                /* İsteğe Bağlı: SVG'nin rengini değiştirmek isterseniz */
                .service-image svg path {
                    fill: #5e72e4; /* Argon temasının ana rengi (primary) */
                }

        .service-item h6 {
            font-size: 1.1rem;
            font-weight: 600;
        }
